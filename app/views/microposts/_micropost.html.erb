<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user%>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
        <%= link_to "delete", micropost, method: :delete,data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  <% if logged_in? %>
      <% if current_user?(micropost.user) || current_user.following?(micropost.user) %>
          <div class="micropost_comment-like">
            <%= render partial: 'users/like_form', locals: { micropost: micropost } %>
            <%= sync partial: 'like_stats', resource: micropost %>
            <%= render partial: 'shared/comment_form', locals: { micropost: micropost } %>
            <div id="comments">
              <% micropost.comments.each do |comment|%>
              <%= sync partial: 'comment', resource: comment %>
              <% end %>
              <%= sync_new partial: 'comment', resource: Comment.new, scope: micropost %>
            </div>
          </div>
      <% end %>
  <%end%>
</li>