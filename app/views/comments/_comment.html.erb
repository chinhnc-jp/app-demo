<div id="comment-<%= comment.id %>" >
  <span style="width: 100%; background:#dff0d8">
    <%= comment.comment_content %>
    <br>
    <%= image_tag comment.pictute.url if comment.pictute? %>
  </span>
  <span class="timestamp">
    Posted by <%= comment.user.name %>
    <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user?(comment.user) || current_user?(comment.micropost.user) %>
        <%= link_to "delete", comment, method: :delete,data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</div>